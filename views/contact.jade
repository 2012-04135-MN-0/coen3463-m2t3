doctype html
html
  head
    link(rel='stylesheet', type='text/css', href='../stylesheets/bulmas.css')
    title
  body(background='../images/pIXcfQ7.jpg')
    nav.nav.has-shadow
      .container
        .nav-left
          a.nav-item
            img(src='../images/Team 3 Logo.jpg', alt='Bulma logo')
          a.nav-item.is-tab.is-hidden-mobile(href='/') Home
          a.nav-item.is-tab.is-hidden-mobile.is-active(href='/contact') Contact Us
        span.nav-toggle
          span
          span
          span
        .nav-right.nav-menu
          a.nav-item.is-tab.is-hidden-tablet(href='/') Home
          a.nav-item.is-tab(href='/audio') Sound Editing
          a.nav-item.is-tab(href='/video') Video Editing
          a.nav-item.is-tab(href='/photo') Photo Editing
    
    form(method='post',action='/contact/send')
      label.label Name
      p.control
        input.input(type='text', placeholder='Text input', name='name')
      label.label Username
      p.control.has-icon.has-icon-right
        input.input.is-success(type='text', placeholder='Text input', value='bulma', name='username')
        span.icon.is-small
          i.fa.fa-check
        span.help.is-success This username is available
      label.label Email
      p.control.has-icon.has-icon-right
        input.input.is-danger(type='text', placeholder='Email input', value='hello@', name='email')
        span.icon.is-small
          i.fa.fa-warning
        span.help.is-danger This email is invalid
      label.label Subject
      p.control
        span.select
          select(name='service')
            option Select dropdown
            option Video Editing
            option Sound Editing
            option Photo Editing
      label.label Message
      p.control
        textarea.textarea(placeholder='Textarea', name='message')
      p.control
      p.control
      .control.is-grouped
        p.control
          button.button.is-primary Submit
        p.control.is
          button.button.is-primary Cancel
